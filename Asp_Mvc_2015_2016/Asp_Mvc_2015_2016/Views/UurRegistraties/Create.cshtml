@model Asp_Mvc_2015_2016.ViewModels.UurRegistratieViewModel

@{
    ViewBag.Title = "Uren Registreren";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset>
            <legend>UurRegistratie</legend>

            @Html.Partial("_CreateOrEdit", Model)

            <p>
                <input type="submit" value="Create" class="btn btn-default pull-right"/>
            </p>
        </fieldset>
    </div>
}    
<div>
    @Html.ActionLink("Back to invoice details", "Details", new { controller = "FactuurDetails", id = Model.UurRegistratie.FactuurDetailId })
</div>

