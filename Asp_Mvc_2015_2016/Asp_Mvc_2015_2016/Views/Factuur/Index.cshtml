@model IEnumerable<Asp_Mvc_2015_2016.Models.Factuur>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Klant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FactuurJaar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FactuurNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FactuurDatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Totaal)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>        
            <td>
                @Html.DisplayFor(model => item.Klant.NaamBedrijf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FactuurJaar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FactuurNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FactuurDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totaal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
