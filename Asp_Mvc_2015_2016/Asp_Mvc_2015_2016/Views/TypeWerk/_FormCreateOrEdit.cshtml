@using Asp_Mvc_2015_2016.Models
@model TypeWerk

@using (Ajax.BeginForm((string)ViewBag.PageType, new AjaxOptions() { UpdateTargetId="TypeWerkList", OnFailure = "fs.modalSaveFailed", OnSuccess = "fs.modalSaveSuccess" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
        
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.WerkType, new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.WerkType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WerkType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GeldigVanaf, new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.GeldigVanaf, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GeldigVanaf, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TariefPerUur, new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.TariefPerUur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TariefPerUur, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="@CultureResource.Save" class="btn btn-primary pull-right" />
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal">@CultureResource.Cancel</button>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}