@using Asp_Mvc_2015_2016.ViewModels
@model FactuurDetailsViewModel
@*@using (Html.BeginForm())*@
@using (Ajax.BeginForm("Create", new AjaxOptions() { OnFailure = "fs.modalSaveFailed", OnSuccess = "fs.modalSaveSuccess" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("_CreateOrEdit", Model)
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="@CultureResource.Save" class="btn btn-primary pull-right" /> 
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal">@CultureResource.Cancel</button>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}

<div>
    @Html.ActionLink("Back to unbilled services list", "UnbilledList")
</div>