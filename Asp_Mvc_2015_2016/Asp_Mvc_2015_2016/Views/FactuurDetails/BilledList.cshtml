@model IEnumerable<Asp_Mvc_2015_2016.Models.FactuurDetails>

@{
    ViewBag.Title = "Index";
}

<h2>Gefactureerde Factuur Details</h2>

<table class="table table-striped table-hover table-condensed">
    <tr>        
        <th>Titel</th>
        <th>Omschrijving</th>       
        <th>Klant</th>
        <th>lijnwaarde</th>        
        <th># <abbr title="Gefactureerde Uurregistraties">G.U.</abbr></th>
        <th>Totaal</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Titel</td>
            <td>@item.Omschrijving</td>            
            <td>@Html.ActionLink(item.Klant.NaamBedrijf, "Details", new { controller = "Klant", id = item.KlantId })</td>
            <td>@item.lijnwaarde</td>
            <td>@item.GefactureerdeUren.Count</td>
            <td>@String.Format("{0:#.##} €",item.GefactureerdeUren.Sum(p => p.Total))</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })               
            </td>
        </tr>
    }

</table>

<div>
  Jump to: @Html.ActionLink("Unbilled services list", "UnbilledList")
</div>

