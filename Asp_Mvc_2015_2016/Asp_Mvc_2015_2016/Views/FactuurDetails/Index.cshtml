@model IEnumerable<Asp_Mvc_2015_2016.Models.FactuurDetails>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Omschrijving</th>
            <th>Titel</th>
            <th>Klant</th>
            <th>uurRegistratie</th>
            <th>lijnwaarde</th>
            <th>CreatedBy</th>
            <th>
                EditedBy
            </th>
            <th>
                GefactureerdeUren
            </th>
            <th>
                NietGefactureerdeUren
            </th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Omschrijving
        </td>
        <td>
			@item.Titel
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Klant).ToString()
        </td>
        <td>
			@(item.uurRegistratie == null ? "None" : item.uurRegistratie.Count.ToString())
        </td>
        <td>
			@item.lijnwaarde
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.CreatedBy).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.EditedBy).ToString()
        </td>
        <td>
			@(item.GefactureerdeUren == null ? "None" : item.GefactureerdeUren.Count.ToString())
        </td>
        <td>
			@(item.NietGefactureerdeUren == null ? "None" : item.NietGefactureerdeUren.Count.ToString())
        </td>
    </tr>
}

</table>


